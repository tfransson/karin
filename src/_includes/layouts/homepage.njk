{% extends "base.njk" %}

{% block content %}

    <section class="site-home">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <div class="site-home-content text-center">
              <h6>{{home.subTitle}}</h6>
              <h1>
                {{home.title.firstPara}}
                <br>
                {{home.title.secondPara}}
              </h1>
              <ul class="site-home-content-buttons">
                <li>
                  <a href="{{home.seeWorkBtn.link}}" class="btn btn-secondary scroll-to">
                    <span class="btn-area">
                      <span data-text="{{home.seeWorkBtn.text}}">
                        {{home.seeWorkBtn.text}}
                      </span>
                    </span>
                  </a>
                </li>
                <li>
                  <a href="/{{home.connectBtn.link}}" class="btn btn-primary">
                    <span class="btn-area">
                      <span data-text="{{home.connectBtn.text}}">
                        {{home.connectBtn.text}}
                      </span>
                    </span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <a href="#design_projects" class="site-home-scroll scroll-to">
        <img src="/assets/images/arrow-down.svg" alt="arrow-down">
      </a>
    </section>

    <section class="site-project" id="design_projects">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>{{portfolio_design.subTitle}}</h2>
              <p>{{portfolio_design.title}}</p>
            </div>
          </div>
          {% for portfolio in collections.design_portfolios %}
          <div class="col-lg-4 col-md-6 mx-auto">
            <div class="site-project-item">
              <div class="site-project-item-thumb">
                <img src="{{portfolio.data.img}}" alt="project-thumb">
              </div>
              <div class="site-project-item-content">
                <span>{{portfolio.data.subTitle}}</span>
                <h3>{{portfolio.data.title}}</h3>
                <a href="{{portfolio.data.page.url}}" class="read-more">{{portfolio.data.linkText}}</a>
              </div>
            </div>
          </div>
          {% endfor %}
          <div class="col-12 text-center text-lg-left">
            <a href="/{{portfolio_design.seeAllbtn.link}}" class="site-project-cta">{{portfolio_design.seeAllbtn.text}}</a>
          </div>
        </div>
      </div>
    </section>
    <section class="site-project" id="craft_projects">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>{{portfolio_craft.subTitle}}</h2>
              <p>{{portfolio_craft.title}}</p>
            </div>
          </div>
          {% for portfolio in collections.craft_portfolios %}
          <div class="col-lg-4 col-md-6 mx-auto">
            <div class="site-project-item">
              <div class="site-project-item-thumb">
                <img src="{{portfolio.data.img}}" alt="project-thumb">
              </div>
              <div class="site-project-item-content">
                <span>{{portfolio.data.subTitle}}</span>
                <h3>{{portfolio.data.title}}</h3>
                <a href="{{portfolio.data.page.url}}" class="read-more">{{portfolio.data.linkText}}</a>
              </div>
            </div>
          </div>
          {% endfor %}
          <div class="col-12 text-center text-lg-left">
            <a href="/{{portfolio_craft.seeAllbtn.link}}" class="site-project-cta">{{portfolio_craft.seeAllbtn.text}}</a>
          </div>
        </div>
      </div>
    </section>

    <section class="site-cta">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            <h1 class="site-cta-title">{{workTogether.heading}}</h1>
            <ul class="site-cta-buttons">
              <li>
                <a href="/{{workTogether.submitBtn.btnLink}}" class="btn btn-secondary">
                  <span class="btn-area">
                    <span data-text="{{workTogether.submitBtn.btnText}}">
                      {{workTogether.submitBtn.btnText}}
                    </span>
                  </span>
                </a>
              </li>
              <li>
                <a href="/{{workTogether.convBtn.btnLink}}" class="btn btn-primary">
                  <span class="btn-area">
                    <span data-text="{{workTogether.convBtn.btnText}}">
                      {{workTogether.convBtn.btnText}}
                    </span>
                  </span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

{% endblock %}